<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>
    <body>
        <!-- HEADER -->
        <%- include('../partials/header.ejs') %>
            <main>
                <section class="contenedor-formularios">
                  
                    <form action="/products/" method="POST" name="formNewProducto"
                        enctype="multipart/form-data">

                        <h1>Nuevo producto</h1>
                        <div class="contenedor-input">
                            <label for="titulo">Nombre del Producto : </label>
                            <input type="text" name="name" id="titulo">
                        </div>
                        <div class="contenedor-input">
                            <label for="descripcion">Descripción : </label>
                            <textarea name="description" for="descripc" placeholder="Máximo 300 caracteres" maxlength="300" rows="5" cols="30"></textarea>
                        </div>
                        <div class="contenedor-input">
                            <label for="titulo">Precio : </label>
                            <input type="number" name="price" id="precio" step="0.01" min="0" autocomplete="off" />
                        </div>
                        <div class="contenedor-input">
                            <label for="Off">Descuento : </label>
                            <input type="number" name="off" step="1" min="0" max="100" autocomplete="off">
                        </div>
                        <div class="contenedor-input">
                                <label for="categoria">Categoria : </label>
                                <div>
                                    <input type="radio" id="product" name="type" value="product">
                                    <label for="product">Producto </label>
                                </div>
                                <div>
                                    <input type="radio" id="service" name="type" value="service">
                                    <label for="service">Servicio </label>
                                </div>
                        </div>

                        <% if (true) { %>
                            <div class="contenedor-input">
                                <label>Tiempo Servicio en minutos : </label>
                                <input type="number" name="timeMinutes" step="1" min="1" autocomplete="off">
                            </div>
                        <% } %>

                        <div class="contenedor-input">
                            <label for="imagen">Imagen : </label>
                            <input type="file" name="img" id="image" accept="image/png, image/png" >
                        </div>
                        <div class="contenedor-input">
                            <label>Tiempo Servicio en minutos : </label>
                            <select name="Tiempo">
                                <option>30</option>
                                <option>45</option>
                                <option>60</option>
                                <option>90</option>
                                <option>180</option>
                            </select>
                        </div>
                        <div class="contenedor-input">
                            <label>Tamaño del producto : </label>
                            <select name="Tamano">
                                <option>XS</option>
                                <option>S</option>
                                <option>M</option>
                                <option>L</option>
                                <option>XL</option>
                                <option>XXL</option>
                            </select>
                        </div>
                        <div class="contenedor-input">

                            <label for="categoria">Tipo de servicio o producto : </label></br>
                            <input type="radio" id="tratamiento" name="fav_language" value="tratamiento">
                              <label for="tratamiento">Tratamiento</label>
                            <input type="radio" id="cuidado" name="fav_language" value="cuidado">
                              <label for="cuidado">Cuidado</label>
                        </div>
                        <div class="contenedor-input">
                            <label for="estado">Estado : </label></br>
                              <input type="radio" id="activo" name="fav_language" value="Activo">
                              <label for="activo">Activo</label>
                        </div>


                        <button type="submit">Save</button>
                    </form>
                </section>
            </main>
            
            <!-- FOOTER -->
            <%- include('../partials/footer.ejs') %>

    </body>

</html>
