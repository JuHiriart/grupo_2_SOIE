<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

    <body>

        <!-- HEADER -->
        <%- include('../partials/header') %>
            <!------------------------------------------------------->
            <main>

                <section>
                    <div class="signInBox">

                        <h1>Registrarse</h1>

                        <form action="/users/signin?_method=POST" id="userForm" method="POST" enctype="multipart/form-data" name="signin-form">

                            <!-- NOMBRE -->
                            <div>
                                <label for="firstName" class="firstName">
                                    Nombre
                                    <input type="text" id="firstName" name="firstName" placeholder="Nombre del usuario" required minlength="2"
                                        value=<%= user.firstName ?? '' %> >
                                        <% if (locals.errors && errors.firstName) { %>
                                            <div class="error"><%= errors.firstName.msg %></div>
                                        <% } %>
                                </label>
                            </div>

                            <!-- APELLIDO -->
                            <div>
                                <label for="lastName" class="name">
                                    Apellido
                                    <input type="text" id="lastName" name="lastName" placeholder="Apellido del usuario" required minlength="2"
                                        value=<%= user.lastName ?? '' %> >
                                        <% if (locals.errors && errors.lastName) { %>
                                            <div class="error"><%= errors.lastName.msg %></div>
                                        <% } %>
                                </label>
                            </div>

                            <!-- EMAIL -->
                            <div>
                                <label for="email" class="email">
                                    Email
                                    <input type="email" id="email" name="email" placeholder="Correo electrónico" required
                                        value=<%= user.email ?? '' %> >
                                        <% if (locals.errors && errors.email ) { %>
                                            <div class="error"><%= errors.email.msg %></div>
                                        <% } %>
                                </label>
                            </div>

                            <!-- PASSWORD -->
                            <div>
                                <label for="password" class="pass">
                                    Contraseña
                                    <input type="password" name="password" id="password" placeholder="Contraseña" required minlength="8">
                                    <% if (locals.errors && errors.password) { %>
                                        <div class="error"><%= errors.password.msg %></div>
                                    <% } %>
                                </label>
                            </div>

                            <!-- PASSWORD CONFIRMATION -->
                            <div>
                                <label for="passCon" class="passCon">
                                    Confirmar Contraseña
                                    <input type="password" id="passCon" name="passCon" placeholder="Confirmar contraseña" required minlength="8">
                                    <% if (locals.errors && errors.passCon) { %>
                                        <div class="error"><%= errors.passCon.msg %></div>
                                    <% } %>
                                </label>
                            </div>

                            <!-- BIRTH -->
                            <div>
                                <label for="birth" class="birth">
                                    Fecha de nacimiento
                                    <input type="date" name="birth" id="birth" required value=<%= user.birth ?? '' %>>
                                    <% if (locals.errors && errors.birth) { %>
                                        <div class="error"><%= errors.birth.msg %></div>
                                    <% } %>
                                </label>
                            </div>
                            
                            <!-- GENDER -->
                            <label for="gender">Genero</label>
                            <select class="gender options" name="gender">

                                <!-- HOMBRE -->
                                <option type="radio" id="hombre" name="gender" <% if (user.gender=='hombre' ) { %> selected <% } %> >
                                <label for="hombre">Hombre</label>
                                <!-- MUJER -->
                                <option type="radio" id="mujer" name="gender" <% if (user.gender=='mujer' ) { %> selected <% } %>>
                                <label for="mujer">Mujer</label>
                                <!-- OTRO -->
                                <option type="radio" id="otro" name="gender" <% if (user.gender=='otro' ) {%> selected <% } %>>
                                <label for="otro">Otro</label>

                            </select>

                            <!-- DIRECCION -->
                            <div>
                                <label for="address" class="address">
                                    Direccion
                                    <input type="text" name="address" id="address" placeholder="Direccion" required value=<%= user.address ?? '' %>>
                                    <% if (locals.errors && errors.address) { %>
                                        <div class="error"><%= errors.address.msg %></div>
                                    <% } %>
                                </label>
                            </div>

                            <!-- telefono -->
                            <div>
                                <label for="numberPhone" class="numberPhone">
                                    Telefono
                                    <input type="tel" name="numberPhone" id="numberPhone" placeholder="Telefono" required value=<%= user.numberPhone ?? '' %>>
                                    <% if (locals.errors && errors.numberPhone) { %>
                                        <div class="error"><%= errors.numberPhone.msg %></div>
                                    <% } %>
                                </label>
                            </div>
                            
                            
                            <!-- PROFILE PICTURE -->
                            <div>
                                <label for="img" class="img">
                                    Foto de perfil
                                    <input type="file" id="img" name="img" accept="image/png, image/jpg">
                                    <% if (locals.errors && errors.img) { %>
                                        <div class="error"><%= errors.img.msg %></div>
                                    <% } %>
                                </label>
                            </div>

                            
                            <input type="submit" value="Crear mi cuenta" id="sendBtn">
                            
                        </div>


                    </div>
                    </form>



                </section>

            </main>

            <!-- FOOTER -->
            <%- include('../partials/footer') %>




    </body>

</html>