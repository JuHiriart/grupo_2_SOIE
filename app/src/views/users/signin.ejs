<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

    <body>

        <!-- HEADER -->
        <%- include('../partials/header') %>
            <!------------------------------------------------------->
            <main>

                <section>
                    <div class="signInBox">

                        <h1>Registrarse</h1>

                        <form action="/users/signin?_method=POST" id="userForm" method="POST" enctype="multipart/form-data" name="signin-form">

                            <!-- NOMBRE -->
                            <div>
                                <label for="first_name" class="first_name">
                                    Nombre
                                    <input type="text" id="first_name" name="first_name" placeholder="Nombre del usuario"
                                        value=<%= user.first_name ?? '' %> >
                                        <% if (locals.errors && errors.first_name) { %>
                                            <div class="error"><%= errors.first_name.msg %></div>
                                        <% } %>
                                </label>
                            </div>

                            <!-- APELLIDO -->
                            <div>
                                <label for="last_name" class="name">
                                    Apellido
                                    <input type="text" id="last_name" name="last_name" placeholder="Apellido del usuario"
                                        value=<%= user.last_name ?? '' %> >
                                        <% if (locals.errors && errors.last_name) { %>
                                            <div class="error"><%= errors.last_name.msg %></div>
                                        <% } %>
                                </label>
                            </div>

                            <!-- EMAIL -->
                            <div>
                                <label for="email" class="email">
                                    Email
                                    <input type="email" id="email" name="email" placeholder="Correo electrónico"
                                        value=<%= user.email ?? '' %> >
                                        <% if (locals.errors && errors.email ) { %>
                                            <div class="error"><%= errors.email.msg %></div>
                                        <% } %>
                                </label>
                            </div>

                            <!-- PASSWORD -->
                            <div>
                                <label for="password" class="pass">
                                    Contraseña
                                    <input type="password" name="password" id="password" placeholder="Contraseña">
                                    <% if (locals.errors && errors.password) { %>
                                        <div class="error"><%= errors.password.msg %></div>
                                    <% } %>
                                </label>
                            </div>

                            <!-- PASSWORD CONFIRMATION -->
                            <div>
                                <label for="passCon" class="passCon">
                                    Confirmar Contraseña
                                    <input type="password" id="passCon" name="passCon" placeholder="Confirmar contraseña">
                                    <% if (locals.errors && errors.passCon) { %>
                                        <div class="error"><%= errors.passCon.msg %></div>
                                    <% } %>
                                </label>
                            </div>

                            <!-- BIRTH -->
                            <div>
                                <label for="birth" class="birth">
                                    Fecha de nacimiento
                                    <input type="date" name="birth" id="birth" value=<%= user.birth ?? '' %>>
                                    <% if (locals.errors && errors.birth) { %>
                                        <div class="error"><%= errors.birth.msg %></div>
                                    <% } %>
                                </label>
                            </div>
                            
                            <!-- GENDER -->
                            <label for="gender">Genero</label>
                            <select class="gender options" name="gender">

                                <!-- HOMBRE -->
                                <option type="radio" id="hombre" name="gender" <% if (user.gender=='hombre' ) { %> selected <% } %> >
                                <label for="hombre">Hombre</label>
                                <!-- MUJER -->
                                <option type="radio" id="mujer" name="gender" <% if (user.gender=='mujer' ) { %> selected <% } %>>
                                <label for="mujer">Mujer</label>
                                <!-- OTRO -->
                                <option type="radio" id="otro" name="gender" <% if (user.gender=='otro' ) {%> selected <% } %>>
                                <label for="otro">Otro</label>

                            </select>

                            <!-- DIRECCION -->
                            <div>
                                <label for="direccion" class="direccion">
                                    Direccion
                                    <input type="text" name="direccion" id="direccion" placeholder="Direccion" value=<%= user.direccion ?? '' %>>
                                    <% if (locals.errors && errors.direccion) { %>
                                        <div class="error"><%= errors.direccion.msg %></div>
                                    <% } %>
                                </label>
                            </div>

                            <!-- telefono -->
                            <div>
                                <label for="telefono" class="telefono">
                                    Telefono
                                    <input type="tel" name="telefono" id="telefono" placeholder="Telefono" value=<%= user.telefono ?? '' %>>
                                    <% if (locals.errors && errors.telefono) { %>
                                        <div class="error"><%= errors.telefono.msg %></div>
                                    <% } %>
                                </label>
                            </div>
                            
                            
                            <!-- PROFILE PICTURE -->
                            <div>
                                <label for="img" class="img">
                                    Foto de perfil
                                    <input type="file" id="img" name="img" accept="image/png, image/jpg">
                                    <% if (locals.errors && errors.img) { %>
                                        <div class="error"><%= errors.img.msg %></div>
                                    <% } %>
                                </label>
                            </div>

                            
                            <input type="submit" value="Crear mi cuenta" id="sendBtn">
                            
                        </div>


                    </div>
                    </form>



                </section>

            </main>

            <!-- FOOTER -->
            <%- include('../partials/footer') %>




    </body>

</html>